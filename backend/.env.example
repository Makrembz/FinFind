# ============================================================================
# FinFind Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your values

# ============================================================================
# Qdrant Cloud Configuration
# ============================================================================
QDRANT_URL=https://your-cluster.qdrant.io:6333
QDRANT_API_KEY=your_qdrant_api_key_here
QDRANT_COLLECTION_PRODUCTS=products
QDRANT_COLLECTION_USERS=users
QDRANT_COLLECTION_INTERACTIONS=interactions
QDRANT_COLLECTION_REVIEWS=reviews

# ============================================================================
# Groq API Configuration (LLM)
# ============================================================================
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-70b-versatile
GROQ_MAX_TOKENS=8192
GROQ_TEMPERATURE=0.1

# ============================================================================
# Embedding Model Configuration
# ============================================================================
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384
EMBEDDING_DEVICE=cpu
# Set to cuda if you have GPU: EMBEDDING_DEVICE=cuda

# ============================================================================
# Image Processing Configuration
# ============================================================================
# Backend options: clip, openclip, groq_vision
IMAGE_BACKEND=clip
IMAGE_MODEL=ViT-B/32
IMAGE_EMBEDDING_DIMENSION=512
IMAGE_MAX_SIZE=1024
IMAGE_FORMATS=jpg,jpeg,png,webp

# OpenCLIP specific (if using openclip backend)
OPENCLIP_MODEL=ViT-B-32
OPENCLIP_PRETRAINED=laion2b_s34b_b79k

# ============================================================================
# Voice Processing Configuration
# ============================================================================
# Backend options: whisper_local, whisper_api, groq
VOICE_BACKEND=whisper_local
WHISPER_MODEL=base
WHISPER_LANGUAGE=en
WHISPER_DEVICE=cpu
AUDIO_FORMATS=wav,mp3,m4a,flac,ogg
AUDIO_MAX_DURATION=60
AUDIO_SAMPLE_RATE=16000

# OpenAI Whisper API (if using whisper_api backend)
OPENAI_API_KEY=your_openai_api_key_here

# ============================================================================
# Redis Configuration (Optional - for session storage)
# ============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
# Set USE_REDIS=true to enable Redis session storage
USE_REDIS=false

# ============================================================================
# CORS Configuration
# ============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=true

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# ============================================================================
# Application Configuration
# ============================================================================
DEBUG=false
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=8000

# Enable/disable features
ENABLE_IMAGE_SEARCH=true
ENABLE_VOICE_INPUT=true
ENABLE_CACHING=true

# Cache TTL (seconds)
CACHE_TTL_PRODUCTS=3600
CACHE_TTL_RECOMMENDATIONS=1800
CACHE_TTL_SEARCH=600

# ============================================================================
# Security Configuration
# ============================================================================
# Secret key for JWT tokens (generate with: openssl rand -hex 32)
SECRET_KEY=your_secret_key_here_generate_with_openssl_rand_hex_32
JWT_ALGORITHM=HS256
JWT_EXPIRY_MINUTES=60

# ============================================================================
# Multimodal Processing
# ============================================================================
# Maximum file upload sizes
MAX_IMAGE_SIZE_MB=10
MAX_AUDIO_SIZE_MB=25

# Temporary file storage
TEMP_DIR=/tmp/finfind

# ============================================================================
# Vector Search Configuration
# ============================================================================
SEARCH_TOP_K=10
SEARCH_SCORE_THRESHOLD=0.5
MMR_DIVERSITY=0.3
RERANKER_ENABLED=false
