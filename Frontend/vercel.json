{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "name": "finfind-frontend",
  "version": 2,
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "regions": ["iad1", "sfo1"],
  "env": {
    "NEXT_PUBLIC_API_URL": "@finfind_api_url"
  },
  "build": {
    "env": {
      "NEXT_PUBLIC_API_URL": "@finfind_api_url"
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://finfind-backend.fly.dev/:path*"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    },
    {
      "source": "/(.*)\\.(js|css|woff|woff2|ttf|ico|png|jpg|jpeg|gif|svg)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "trailingSlash": false,
  "cleanUrls": true,
  "functions": {
    "app/**/*.ts": {
      "maxDuration": 30
    }
  },
  "crons": []
}
